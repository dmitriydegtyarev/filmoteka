{{#each this}}
  <li>
    <img
      class='film-list_img'
      src="https://image.tmdb.org/t/p/w500/{{poster_path}}"
      alt={{original_title}}
    />
    <h2 class='film-list_name'>
      {{original_title}}
    </h2>
    <ul class='film-list_info'>
      <li>
        {{genre_ids}}
      </li>
      <li>
        |
      </li>
      <li>
        {{release_date}}
      </li>
      <li>
        {{vote_average}}
      </li>
    </ul>
  </li>
{{/each}}