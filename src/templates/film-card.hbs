<div class="film">
    <img class="film-img" src="" alt="">
    <div class="film-info">
        <h2 class="film-name">{{original_title}}</h2>
        <div class="film-properties">
            <div class="properties">
                <p>Vote / Votes</p>
                <p>Popularity</p>
                <p>Original Title</p>
                <p>Genre</p>
            </div>
            <div class="property-value">
                <p>{{vote_average}} / {{vote_count}}</p>
                <p>{{popularity}}</p>
                <p class="film-origin-title">{{original_title}}</p>
                <p>{{genres}}</p>
            </div>
        </div>
        <p class="film-about">About</p>
        <span class="film-description">{{overview}}</span>

        <div class="buttons">
            <button class="add-watched_button" type="button">add to Watched</button>
            <button class="add-queue_button" type="button">add to queue</button>
        </div>
    </div>
</div>